<!-- res/drawable/scaled_checkbox_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <bitmap
                    android:src="@drawable/check_yse"
                    android:gravity="center"
                    android:width="24dp"
                    android:height="24dp"/>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item>
                <bitmap
                    android:src="@drawable/check_no"
                    android:gravity="center"
                    android:width="24dp"
                    android:height="24dp"/>
            </item>
        </layer-list>
    </item>
</selector>